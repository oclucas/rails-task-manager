<div class="container">

  <h1>My tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>

        <%= link_to task.title , task_path(task), class: "text-decoration-none" %> -
        <%= link_to ('<i class="far fa-trash-alt"></i>').html_safe , task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "text-decoration-none" %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add a task" , new_task_path, class: "btn btn-primary" %>

</div>
