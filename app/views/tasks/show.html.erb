<div class="container">

  <h1>
    <%= @task.title %>
  </h1>


  <div class="alert alert-secondary" role="alert">
    <%= @task.details %>
  </div>


  <% if @task.completed %>
    <div class="alert alert-success" role="alert">
     This task is completed.
    </div>
  <% else %>
    <div class="alert alert-warning" role="alert">
      This task is not completed yet.
    </div>
  <% end %>


  <%= link_to "Back to list" , tasks_path, class: "btn btn-primary" %>
  <%= link_to "Edit task" , edit_task_path(@task), class: "btn btn-dark" %>

</div>
