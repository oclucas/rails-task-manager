<%= simple_form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>
  <%= f.label :details %>
  <%= f.text_field :details %><br><br>
  <% unless @task.new_record? %>
    <%= f.label :completed %>
    <%= f.check_box :completed%>
  <% end %>
  <%= f.submit, class: 'btn btn-primary' %>
<% end %>
